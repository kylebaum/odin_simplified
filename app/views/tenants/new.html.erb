<!-- Validation failure messages -->
<% if @tenant.errors.any? %>
  <% @tenant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tenant</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tenant" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="control-label">
          Email
        </label>

        <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @tenant.email %>">
      </div>

      <!-- Label and input for password -->
      <div class="form-group">
        <label for="password" class="control-label">
          Password
        </label>

        <input type="text" id="password" name="password" placeholder="Password" class="form-control" value="<%= @tenant.password %>">
      </div>

      <button class="btn btn-success">
        Create Tenant
      </button>
      or
      <a href="/tenants">Cancel</a>
    </form>
  </div>
</div>
