<div class="page-header">
  <h1>
    Maintenance requests
    <a href="/maintenance_requests/new" class="btn btn-lg btn-success">New Maintenance request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Property</th>
        <th>Body of request</th>
        <th>Actions</th>
      </tr>

      <% @maintenance_requests.each do |maintenance_request| %>
      <tr>
        <td><%= maintenance_request.property_id %></td>
        <td><%= maintenance_request.body_of_request %></td>
        <td>
          <a href="/maintenance_requests/<%= maintenance_request.id %>" class="btn btn-primary">Show</a>
          <a href="/maintenance_requests/<%= maintenance_request.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_maintenance_request/<%= maintenance_request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
