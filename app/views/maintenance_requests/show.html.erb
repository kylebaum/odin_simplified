<div class="page-header">
  <h3>Maintenance Request #<%= @maintenance_request.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Property</dt>
      <dd>
        <% if @maintenance_request.property.present? %>
          <a href="/properties/<%= @maintenance_request.property_id %>">
            <%= @maintenance_request.property.owner_id %>
          </a>
        <% end %>
      </dd>

      <dt>Body of request</dt>
      <dd><%= @maintenance_request.body_of_request %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/maintenance_requests" class="btn btn-primary">
        Back
      </a>
      <a href="/maintenance_requests/<%= @maintenance_request.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_maintenance_request/<%= @maintenance_request.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
