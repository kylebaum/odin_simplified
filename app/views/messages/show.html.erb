<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender type</dt>
      <dd><%= @message.sender_type %></dd>

      <dt>Recipient type</dt>
      <dd><%= @message.recipient_type %></dd>

      <dt>Body</dt>
      <dd><%= @message.body %></dd>

      <dt>Property</dt>
      <dd>
        <% if @message.property.present? %>
          <a href="/properties/<%= @message.property_id %>">
            <%= @message.property.owner_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
